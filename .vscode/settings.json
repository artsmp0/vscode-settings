{
  "window.nativeFullScreen": false,
  "window.nativeTabs": true,
  "workbench.productIconTheme": "icons-carbon",
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "artsmp-dark",
  "workbench.iconTheme": "icons",
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.activityBar.location": "side",
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.startupEditor": "none",
  "workbench.tree.expandMode": "singleClick",
  "workbench.editor.empty.hint": "text",
  "workbench.list.smoothScrolling": true,
  "workbench.colorCustomizations": {
    "terminalCursor.foreground": "#F3A580",
    "[Hibiscus]": {
      "list.inactiveFocusOutline": "#67B397",
      "list.inactiveSelectionBackground": "#67B39733"
    },
    "breadcrumbs.enabled": false
  },
  // ====================== editor ======================
  "editor.minimap.enabled": false,
  "editor.guides.bracketPairs": "active",
  "editor.guides.indentation": false,
  "editor.renderWhitespace": "none",
  "editor.renderLineHighlight": "all",
  "editor.matchBrackets": "never",
  "editor.lightbulb.enabled": false,
  "editor.hover.enabled": true,
  // collapsed editor code by this
  "editor.showFoldingControls": "always",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.overviewRulerBorder": false,
  "editor.cursorBlinking": "blink",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.tabSize": 2,
  "editor.fontFamily": "JetBrainsMono Nerd Font, Dank Mono, Input",
  "editor.fontSize": 13.5,
  "editor.lineHeight": 1.7,
  "editor.formatOnSave": true,
  "editor.fontLigatures": "'cv02', 'cv04', 'cv11', 'cv08', 'cv07', 'cv12', 'cv16','cv17",
  "editor.wordSeparators": "`~!#%^&*()=+[{]}\\|;:'\",.<>/?",
  "editor.lineNumbers": "interval",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.bracketPairColorization.enabled": false,
  "editor.suggestSelection": "first",
  "editor.autoClosingBrackets": "languageDefined",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.smoothScrolling": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.fixAll.eslint": true,
    "source.organizeImports": false
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  // ====================== general ======================
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "git.decorations.enabled": false,
  "scm.diffDecorations": "none",
  "extensions.ignoreRecommendations": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "off",
  "files.eol": "\n",
  "files.simpleDialog.enable": true,
  // ====================== terminal ======================
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  // ====================== plugin setting ======================
  "git.confirmSync": false,
  "color-highlight.markerType": "underline",
  "gitlens.graph.layout": "editor",
  "errorLens.enabledDiagnosticLevels": ["warning", "error"],
  "errorLens.excludeBySource": ["cSpell", "eslint"],
  "eslint.codeAction.showDocumentation": { "enable": true },
  "cSpell.userWords": [
    "antfu",
    "artsmp",
    "Cascader",
    "commitlint",
    "datetime",
    "echarts",
    "gupo",
    "iconify",
    "persistedstate",
    "picocolors",
    "pinia",
    "plopfile",
    "preinstall",
    "sortablejs",
    "stylelint",
    "Unocss",
    "unplugin",
    "unref",
    "vicons"
  ],
  "typescript.updateImportsOnFileMove.enabled": "always",
  "security.workspace.trust.untrustedFiles": "open"
}
